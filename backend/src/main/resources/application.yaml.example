spring:
  application:
    name: nucleus

  datasource:
    url: jdbc:postgresql://localhost:5432/nucleus
    username: ${DB_USER}
    password: ${DB_PASSWORD}
    driver-class-name: org.postgresql.Driver

  jpa:
    hibernate:
      ddl-auto: update
    show-sql: true

    flyway:
      enabled: true
      locations: classpath:db/migration
      baseline-on-migrate: true

    jwt:
      secret: ${JWT_SECRET}
      expirationMs: ${JWT_EXPIRATION}
